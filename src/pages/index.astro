  'Hexo',
  'Hugo'
]
const backend = ['Flask', 'Nginx', 'NextJS']
const others = ['Qt', 'PyQt', 'Qml', 'Android', 'Unity', 'Jinja']

const MAX_POSTS = 10
const allPosts = await getBlogCollection()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
